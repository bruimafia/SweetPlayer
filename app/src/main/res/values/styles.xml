<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/lightGreen_700</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/lightGreen_500</item>
        <item name="colorButtonNormal">@color/lightGreen_700</item>
    </style>

    <style name="ButtonTransparentStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/lightGreen_300</item>
        <item name="colorButtonNormal">@color/colorTransparent</item>
    </style>

</resources>